<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tab_layout">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:font">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/bungee</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="text_view_empty_state">
        <item name="android:layout_marginTop">@dimen/margin_img_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/empty_state_text</item>
    </style>

    <style name="text_view_card_view">
        <item name="android:padding">@dimen/padding_text_view_card_view</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:font">@font/lato_bold</item>
    </style>

    <style name="search_bar_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:font">@font/lato_bold</item>
        <item name="android:layout_marginVertical">@dimen/margin_top_img_card_view</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxBackgroundColor">@color/status_bar_color</item>
        <item name="boxStrokeColor">@color/search_selector</item>
        <item name="boxStrokeWidth">@dimen/search_outline_size</item>
        <item name="android:maxLines">@integer/max_lines_top_rated</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="startIconTint">@color/white</item>
        <item name="android:layout_marginHorizontal">@dimen/search_input_margin</item>
    </style>
</resources>
